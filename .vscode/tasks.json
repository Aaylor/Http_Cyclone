{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "make -j",
            "problemMatcher": [
                {
                    "base": "$ada",
                    "fileLocation": ["relative", "${workspaceRoot}/src/ada"],
                    "pattern": [
                        {
                            "regexp": "^([^:]:?.*\\.ad[bs]):(\\d+):(\\d+):\\s+(warning|note|)(?:[:]\\s+)?(.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                            "message": 5
                        }
                    ]
                },
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "reveal": "never",
                "clear": true,
                "showReuseMessage": false,
            }
        },
        {
            "label": "prove all",
            "type": "shell",
            "command": "gnatprove",
            "args": [
                "-P",
                "prove.gpr",
                "--level=3",
                "-j0"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "base": "$ada",
                    "fileLocation": ["relative", "${workspaceRoot}/src/ada"],
                    "pattern": [
                        {
                            "regexp": "^([^:]:?.*\\.ad[bs]):(\\d+):(\\d+):\\s+(warning|)(?:[:]\\s+)?(.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                            "message": 5
                        }
                    ]
                }
            ]
        },
        {
            "label": "prove function",
            "type": "shell",
            "command": "gnatprove",
            "args": [
                "-P",
                "prove.gpr",
                "--level=3",
                "-j0",
                "--limit-subp=ada_main.adb:16"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "base": "$ada",
                    "fileLocation": ["relative", "${workspaceRoot}/src/ada"],
                    "pattern": [
                        {
                            "regexp": "^([^:]:?.*\\.ad[bs]):(\\d+):(\\d+):\\s+(warning|)(?:[:]\\s+)?(.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                            "message": 5
                        }
                    ]
                }
            ]
        }
    ]
}